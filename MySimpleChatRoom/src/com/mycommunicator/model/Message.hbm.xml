<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.mycommunicator.model">
<class name="Message" table="messages">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
         
        <property name="senderLogin" column="senderLogin"/>    
        <property name="receiverLogin" column="receiverLogin"/>
        <property name="messageContent" column="messageContent"/>
        
    </class>
</hibernate-mapping>